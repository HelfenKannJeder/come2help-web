{
	"rules": {
		"indent": [
			2,
			"tab"
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		]
	},
	"env": {
		"es6": true,
		"mocha": true,
		"node": true
	},
	"globals": {
		"browser": false,
		"expect": false,
		"baseUrl": false,
		"until": false,
		"by": false
	},
	"extends": "eslint:recommended"
}